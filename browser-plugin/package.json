{
  "name": "mule-preview-browser-plugin",
  "version": "1.0.4",
  "description": "Overlays the Mule Preview plugin over SCM web applications",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "addons-linter": "^1.10.1",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.0",
    "concurrently": "^4.1.1",
    "core-js": "^3.1.4",
    "css-loader": "^3.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "file-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.6.0",
    "prettier": "^1.18.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "url-loader": "^2.1.0",
    "web-ext": "^3.1.0",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "scripts": {
    "prebuild": "rimraf ./extension/dist/",
    "watch-extension": "web-ext run -s extension/",
    "watch-webpack": "webpack --config webpack.config.js -w -d",
    "start": "concurrently --kill-others \"npm run watch-extension\" \"npm run watch-webpack\"",
    "build": "webpack --config webpack.production.config.js -p",
    "lint": "eslint --fix src && npx stylelint --fix \"src/**/*.scss\" \"src/**/*.css\" \"src/**/*.html\"",
    "sign": "web-ext sign -s extension/ --api-key \"${MOZILLA_API_KEY}\" --api-secret \"${MOZILLA_API_SECRET}\" --channel unlisted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NoxHarmonium/mule-preview"
  },
  "keywords": [
    "extension",
    "extension-boilerplate",
    "chrome-extension",
    "firefox-addon"
  ],
  "bugs": {
    "url": "https://github.com/NoxHarmonium/mule-preview/issues"
  },
  "homepage": "https://github.com/NoxHarmonium/mule-preview",
  "standard": {
    "globals": [
      "browser",
      "chrome",
      "window"
    ],
    "ignore": [
      "extension/dist/",
      "node_modules/"
    ]
  },
  "dependencies": {
    "cross-fetch": "^3.0.4",
    "webextension-polyfill": "^0.4.0"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "browserslist": "defaults"
}
