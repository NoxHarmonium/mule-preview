{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~*": ["./*"]
    },
    "target": "es6",
    "outDir": "extension/dist",
    "isolatedModules": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
  },
  "include": ["src/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "useCache": true
}
